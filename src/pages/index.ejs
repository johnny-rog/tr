                <td class="name-column">
                    <%= tec.name%>
                </td>
                <td>
                    <%= tec.cor%>
                </td>
                <td>
                    <%= (tec.comp)+' m'%>
                </td>
                <td>
                    <%= 'R$ ' + (tec.vm) %>
                </td>
                <td>
                    <form action="/update" method="get">
                        <input type="hidden" name="product" value="<%= (JSON.stringify(tec)) %>">
                        <input type="submit" value="Atualizar">
                    </form>
                </td>
                <td>
                    <form action="/tecs/delete" onSubmit="return confirm('Confirma ExclusÃ£o ?')" 
